@model AppBar3.Models.Inventario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nuevo Registro de Inventario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label">Producto</label>
                <select asp-for="IdProducto" class ="form-control" asp-items="ViewBag.IdProducto"></select>
            </div>
@*             <div class="form-group">
                <label asp-for="TipoMovimiento" class="control-label">Tipo de Movimiento</label>
                <select asp-for="TipoMovimiento" class="form-control" asp-items="ViewBag.TipoMovimiento">
                    <option value="">Seleccione una opción</option>

                </select>
                <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" type="number" required />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
