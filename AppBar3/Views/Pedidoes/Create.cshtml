@model AppBar3.Models.Pedido

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de Pedido</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaPedido" class="control-label">Fecha de Pedido</label>
                <input asp-for="FechaPedido" class="form-control" disabled value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label asp-for="MetodoPago" class="control-label">Método de Pago</label>
                <select asp-for="MetodoPago" class="form-control">
                    <option value="1">Tarjeta Crédito</option>
                    <option value="2">Tarjeta Débito</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="IdMesa" class="control-label">Mesa</label>
                <select asp-for="IdMesa" class="form-control">
                    @foreach (var mesa in ViewData["IdMesa"] as IEnumerable<SelectListItem>)
                    {
                        <option value="@mesa.Value">@mesa.Text</option>
                    }
                </select>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Crear Pedido" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
